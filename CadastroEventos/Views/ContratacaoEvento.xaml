<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroEventos.Views.ContratacaoEvento"
             Title="ContratacaoEvento">
    <VerticalStackLayout>
        
        <Frame>
            <VerticalStackLayout>
                <Label 
                    Text="Digite o nome do Evento:" />
                <Entry x:Name="nome_evento" />
            </VerticalStackLayout>
        </Frame>

        <Frame>
            <VerticalStackLayout>
                <Label Text="Período do Evento" />
                <HorizontalStackLayout>
                    <Label Text="Data de início:" />
                    <DatePicker x:Name="dtpck_inicio"
                                Format="dd/MM/yyyy" />
                </HorizontalStackLayout>
                    

                <HorizontalStackLayout>
                    <Label Text="Data de Término:" />
                    <DatePicker x:Name="dtpck_termino"
                                Format="dd/MM/yyyy" />

                    </HorizontalStackLayout>
                      
            </VerticalStackLayout>
        </Frame>
        
    </VerticalStackLayout>
    
    
</ContentPage>